<Window x:Class="Volkov_Diplom.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volkov_Diplom"
        mc:Ignorable="d"
        Title="Autorization" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Center" Width="300"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Center" Margin="0,-60,0,0" VerticalAlignment="Center" Width="300"/>
        <Button x:Name="registration" Content="Регистрация" HorizontalAlignment="Center" Margin="-200,150,0,0" VerticalAlignment="Center" Width="150" Height="30" Click="registration_Click"/>
        <Button x:Name="autorization" Content="Войти" HorizontalAlignment="Center" Margin="200,150,0,0" VerticalAlignment="Center" Width="150" Height="30" Click="autorization_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="-350,-50,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Center"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Center" Margin="-350,70,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center"/>

    </Grid>
</Window>
