<Window x:Class="Volkov_Diplom.Spravka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volkov_Diplom"
        mc:Ignorable="d"
        Title="Spravka" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/SpaceBackground.png"/>
        </Grid.Background>
        <Button x:Name="returnButton" Content="На главную" HorizontalAlignment="Left" Margin="26,0,0,10" Width="200" Height="30" VerticalAlignment="Bottom" Click="returnButton_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="600" Height="200" IsReadOnly="True"/>

        <Button x:Name="previousButton" Content="Назад" HorizontalAlignment="Center" Margin="-500,325,0,0" Width="200" Height="30" VerticalAlignment="Center" Click="previousButton_Click" Visibility="Collapsed"/>
        <Button x:Name="nextButton" Content="Вперед" HorizontalAlignment="Center" Margin="500,325,0,0" Width="200" Height="30" VerticalAlignment="Center" Click="nextButton_Click"/>
    </Grid>
</Window>
